<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmojiDisplay"
    android:background="@drawable/display"
    >

    <ImageView
        android:id="@+id/userPhoto"
        android:layout_width="169dp"
        android:layout_height="161dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:contentDescription="This is the user's input photo"
        />

    <EditText
        android:id="@+id/hereEmo"
        android:layout_width="225dp"
        android:layout_height="46dp"
        android:layout_above="@+id/inputEmoji"
        android:layout_below="@+id/userPhoto"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="94dp"
        android:layout_marginTop="173dp"
        android:layout_marginEnd="92dp"
        android:layout_marginRight="92dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="@string/hereEmo" />

    <TextView
        android:id="@+id/inputEmoji"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="233dp"
        android:gravity="center"
        android:text="Emotion: " />

    <EditText
        android:id="@+id/hereEmod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/inputAsc"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="@string/hereEmod" />

    <TextView
        android:id="@+id/inputAsc"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="156dp"
        android:gravity="center"
        android:text="TextView" />

    <Button
        android:id="@+id/generateEmoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userPhoto"
        android:layout_centerHorizontal="true"
        android:text="Generate Emoji" />
</RelativeLayout>